{
  // ====================
  // General
  // ====================
  "breadcrumbs.enabled": false,
  "editor.scrollbar.vertical": "auto",
  "editor.scrollbar.horizontal": "auto",
  "editor.fontSize": 13,
  "editor.matchBrackets": "always",
  "editor.hideCursorInOverviewRuler": true,
  "editor.overviewRulerBorder": false,
  "editor.renderWhitespace": "all",
  //"editor.glyphMargin": false,
  "editor.tokenColorCustomizations": {
    "comments": "#2ea542",
  },
  "editor.wordBasedSuggestions": "matchingDocuments",
  "editor.acceptSuggestionOnEnter": "on",
  "editor.quickSuggestions": {
    "other": true,
    "comments": false,
    "strings": false
  },
  "editor.roundedSelection": false,
  "editor.minimap.enabled": false,
  "editor.renderLineHighlight": "none",
  "editor.cursorStyle": "line",
  "editor.cursorBlinking": "solid",
  "editor.folding": true,
  "editor.autoClosingBrackets": "languageDefined",
  "editor.insertSpaces": true,
  "editor.formatOnSave": true,
  "diffEditor.renderSideBySide": false,
  "editor.cursorSurroundingLines": 8,
  "editor.inlineSuggest.enabled": true,
  "files.autoSave": "afterDelay",
  "window.zoomLevel": -1,
  "files.insertFinalNewline": true,
  "window.closeWhenEmpty": false,
  "explorer.compactFolders": false,
  // ====================
  // MultiCommands
  // ====================
  "multiCommand.commands": [
    {
      "command": "multiCommand.closeAndOpenQuick",
      "sequence": [
        "workbench.action.closeActiveEditor",
        "workbench.action.quickOpen"
      ]
    }
  ],
  // ====================
  // Extensions
  // ====================
  // VIM
  "vim.easymotion": true,
  "vim.useSystemClipboard": true,
  "vim.leader": "<space>",
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": [
        "<leader>",
        "d",
        "d"
      ],
      "after": [
        "\"",
        "_",
        "d",
        "d"
      ]
    },
    {
      "before": [
        "<leader>",
        "x"
      ],
      "after": [
        "\"",
        "_",
        "x"
      ]
    },
    {
      "before": [
        "<leader>",
        "p"
      ],
      "after": [
        "\"",
        "_",
        "p"
      ]
    },
    {
      "before": [
        "<leader>",
        "o"
      ],
      "after": [
        "o",
        "<Esc>"
      ]
    },
    {
      "before": [
        "<leader>",
        "O"
      ],
      "after": [
        "O",
        "<Esc>"
      ]
    },
    {
      "before": [
        "<leader>",
        "p",
        "f"
      ],
      "commands": [
        "workbench.action.quickOpen"
      ]
    },
    // format document
    {
      "before": [
        "<leader>",
        "f"
      ],
      "commands": [
        "editor.action.formatDocument"
      ]
    },
    // moveLineDown
    {
      "before": [
        "J"
      ],
      "commands": [
        "editor.action.moveLinesDownAction"
      ]
    },
    // moveLineUp
    {
      "before": [
        "K"
      ],
      "commands": [
        "editor.action.moveLinesUpAction"
      ]
    },
    {
      "before": [
        "<leader>",
        "p"
      ],
      "after": [
        "_",
        "d",
        "P"
      ]
    },
    {
      "before": [
        "<C-d>"
      ],
      "after": [
        "<C-d>",
        "z",
        "z"
      ]
    },
    {
      "before": [
        "<C-u>"
      ],
      "after": [
        "<C-u>",
        "z",
        "z"
      ]
    },
    {
      "before": [
        "n"
      ],
      "after": [
        "n",
        "z",
        "z",
        "z",
        "v"
      ]
    },
    {
      "before": [
        "N"
      ],
      "after": [
        "N",
        "z",
        "z",
        "z",
        "v"
      ]
    }
  ],
  "vim.visualModeKeyBindingsNonRecursive": [
    {
      "before": [
        "<leader>",
        "p"
      ],
      "after": [
        "_",
        "d",
        "P"
      ]
    },
    {
      "before": [
        "<leader>",
        "d"
      ],
      "after": [
        "_",
        "d"
      ]
    }
  ],
  // GO
  "[go]": {
    "editor.defaultFormatter": "golang.go"
  },
  "[terraform]": {
    "editor.defaultFormatter": "hashicorp.terraform"
  },
  "[shellscript]": {
    "editor.defaultFormatter": "shakram02.bash-beautify"
  },
  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features"
  },
  "[yaml]": {
    "editor.defaultFormatter": "redhat.vscode-yaml"
  },
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[jsonnet]": {
    "editor.defaultFormatter": "cverge.jsonnet-lsp"
  },
  "git.autofetch": true,
  "debug.console.fontSize": 12,
  "markdown.preview.fontSize": 12,
  "terminal.integrated.fontSize": 13,
  "chat.editor.fontSize": 12,
  "scm.inputFontSize": 12,
  "editor.fontFamily": "'monospace regular','Droid Sans Mono', 'monospace', monospace",
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "workbench.startupEditor": "newUntitledFile",
  "scm.diffDecorationsGutterPattern": {
    "added": true
  },
  "scm.diffDecorations": "gutter",
  "github.copilot.enable": {
    "*": true,
    "plaintext": false,
    "markdown": true,
    "scminput": false
  },
  "activitusbar.views": [
    {
      "name": "explorer",
      "codicon": "explorer-view-icon"
    },
    {
      "name": "search",
      "codicon": "search-view-icon"
    },
    {
      "name": "scm",
      "codicon": "source-control-view-icon"
    },
    {
      "name": "debug",
      "codicon": "run-view-icon"
    },
    {
      "name": "extensions",
      "codicon": "extensions-view-icon"
    },
    {
      "name": "todo-tree-view",
      "codicon": "list-tree",
    }
  ],
  "cSpell.checkOnlyEnabledFileTypes": false,
  "cSpell.userWords": [
    "Creds",
    "fluxcd",
    "recombee",
    "storegateway",
    "thanos"
  ],
  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff"
  },
  "vs-kubernetes": {
    "vs-kubernetes.minikube-show-information-expiration": "2024-04-02T12:56:01.868Z"
  },
  "redhat.telemetry.enabled": true,
}
