set $mod Mod1

set $theme $HOME/.config/sway/themes/yaru-sway

include $theme

# Global variables
include $HOME/.config/sway/variables

set $term foot
set $menu wmenu-run

# User variables
include $HOME/.config/sway/variables.d/*.conf

# Outputs and inputs
include $HOME/.config/sway/outputs.d/*.conf
include $HOME/.config/sway/inputs.d/*.conf

# Modes
include $HOME/.config/sway/modes/*.conf

include $HOME/.config/sway/config.d/*.conf

bar { 
     swaybar_command waybar
}
